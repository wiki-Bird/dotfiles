# Basic Settings
set hidden true
set ignorecase true
set icons true

set ifs "\n"
set filesep " "


cmd open_in_vscode $code .

cmd github $start https://github.com/
cmd youtube $start https://www.youtube.com/
cmd gpt $start https://chat.openai.com/
cmd mail $start https://mail.google.com/mail/u/0/
cmd drive $start https://drive.google.com/drive/u/2/my-drive
cmd canvas $start https://canvas.auckland.ac.nz/
cmd sheets $start https://docs.google.com/spreadsheets/d/1pqqAYAykfjdwf3ZERMawlIpKKy5JAinLNJu5lp9Gnps/edit
